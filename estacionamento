	static void sorteio() {

		int a = (int) (Math.random() * 30);

		if (vaga[a] == false) {
			
			vaga[a] = true;

		} else if (vaga[a] ==true) {

			

		} else {

			JOptionPane.showMessageDialog(null, "Todas as vagas estão ocupadas");

		}
	}
	static void sorteio2() {

		int a = (int) (Math.random() * 30);

		if (vaga[a] == false) {

		} else if (vaga[a] == true) {

			vaga[a] = false;

		} else {

			JOptionPane.showMessageDialog(null, "Todas as vagas estão ocupadas");

		}
	}

	static void botaoEntradaSaida() {

		entrada.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {

				cor();
				sorteio();

			}
		});

		saida.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {

				cor();
				sorteio2();

			}
		});

	}

